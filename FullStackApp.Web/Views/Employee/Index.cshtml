@model IEnumerable<FullStackApp.Core.Business.EmployeeModel>

@{
    ViewBag.Title = "Index";
}
<div class="btn-group">
    <h4></h4>
    <h4></h4>
    <a href="@Url.Action("CreateEmployee", "Employee")" class="btn btn-info "><i class="fa fa-plus"></i>Add New </a>
</div>
<table class="table table-striped table-bordered table-hover col-form-label-sm">
    <thead>
        <tr>
            @*<th> Rest Id </th>*@
            <th> FirstName </th>
            <th> LastName </th>
            <th> Department </th>
            <th> Position</th>
            @*<th> CountDown </th>*@
            <th> DateEmployed</th>
            <th> Address </th>
            @*<th> Alert Expired </th>*@
            <th> Date Created </th>
            <th> Action </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr class="gradeX odd" role="row" id="row-@item.EmployeeId">

                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@String.Format("{0:d}", item.Department)</td>
                @*<td>@Html.DisplayFor(modelItem => item.ExpiredDate)</td>*@
                <td>@Html.DisplayFor(modelItem => item.Position)</td>
                @*<td>@Html.DisplayFor(modelItem => item.CountDown)</td>*@
                <td>@Html.DisplayFor(modelItem => item.DateEmployed)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                @*<td>@Html.DisplayFor(modelItem => item.AlertExpired)</td>*@
                <td>@String.Format("{0:d}", item.CreatedDate)</td>

                <td>
                    <a href="/Service/EditService?id=@item.EmployeeId" class="btn btn-primary btn-xs">
                        <i class="fa fa-pencil"></i>    Edit
                    </a>
                    @*<a href="#" class="js-cancel-restaurant" data-restaurant-id="@item.RestId" data-name="@item.RestName">Cancel</a>*@
                    <a href="#" class="btn btn-danger btn-xs" id="deleteaction" data-id="@item.EmployeeId">
                        <i class="fa fa-trash-o "></i> Delete
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>

