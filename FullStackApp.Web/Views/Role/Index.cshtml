@model FullStackApp.Core.Business.RoleModel
@{
    ViewBag.Title = "Index";
}

<h2>Available  Roles For Application</h2>
<section class="col-sm-6">
    <table class="table-bordered">
        @Html.ActionLink("Create Role", "CreateRole", "Role")

    </table>

</section>
<section class="col-sm-6">
    <table class="table-bordered">
        @Html.ActionLink("Assign Role To User", "RegisterRole", "Account")
    </table>
</section>
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th class="c">
            Role Name
        </th>
    </tr>
    @foreach (var item in Model.Name)
    {
        <tr>
            <td class="c">
                @item
            </td>
        </tr>
    }

</table>

